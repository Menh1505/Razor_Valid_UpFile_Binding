@page
@model ContactModel
@{
}

<h1>Liên hệ</h1>

<form method="post" asp-page="Contact" class="m-2 p-3 bg-light" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div> 
    <div class="form-group">
        <label asp-for="customerInfo.CustomerName">Họ và tên</label>
        <input asp-for="customerInfo.CustomerName" class="form-control">
        <span asp-validation-for="customerInfo.CustomerName"></span>
    </div>
    <div class="form-group">
        <label asp-for="customerInfo.Email">Email</label>
        <input asp-for="customerInfo.Email" class="form-control">
        <span asp-validation-for="customerInfo.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="customerInfo.YearOfBirth">Năm sinh</label>
        <input asp-for="customerInfo.YearOfBirth" class="form-control">
        <span asp-validation-for="customerInfo.YearOfBirth"></span>
    </div>
    <div class="form-group">
        <label asp-for="FileUpload">Upload File</label>
        <input asp-for="FileUpload" class="form-control">
        <span asp-validation-for="FileUpload"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Gửi thông tin</button>
    </div>
</form>
<p>@Model.thongbao</p>
<p>Thông tin nhận được</p>
<ul>
    @if(@Model.customerInfo != null)
    {
        <li>UserName: @Model.customerInfo.CustomerName</li>
        <li>Email: @Model.customerInfo.Email</li>
        <li>YearOfBirth: @Model.customerInfo.YearOfBirth</li>
    }
</ul>